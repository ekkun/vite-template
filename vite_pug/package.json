{
  "name": "vite_pug_template",
  "description": "Vite + Pug + Sass + Babel",
  "version": "1.2.5",
  "keywords": [
    "Vite",
    "pug",
    "scss",
    "babel"
  ],
  "author": "eiji@design24c.com",
  "license": "(c) Design24C",
  "scripts": {
    "start": "yarn images:start && yarn lint && cross-env NODE_ENV=watch vite",
    "preview": "yarn images:start && yarn lint && cross-env NODE_ENV=production vite preview",
    "dev": "yarn clean && cross-env NODE_ENV=development vite build && yarn html && yarn images:build && yarn style:media",
    "build": "yarn clean && cross-env NODE_ENV=production vite build && yarn html && yarn images:build && yarn style:media",
    "deploy": "",
    "html": "node htmlBeautify.mjs",
    "html:lint": "markuplint \"src/**/{*.pug,*.html}\"",
    "style:lint": "",
    "style:media": "node mediaQueries.mjs",
    "es:lint": "eslint \"src/**/*.js\"",
    "lint": "yarn es:lint --fix",
    "images:build": "node convertImage.mjs -i ./src/images -o ./dist/assets/images -m -w -t -v",
    "images:start": "node convertImage.mjs -i ./src/images -o ./.yarn/temp/public/assets/images -m -w -t -v",
    "ln": "node createSymlink.mjs",
    "clean": "rimraf dist"
  },
  "devDependencies": {
    "@babel/core": "^7.24.7",
    "@babel/plugin-transform-arrow-functions": "^7.24.7",
    "@babel/plugin-transform-runtime": "^7.24.7",
    "@babel/preset-env": "^7.24.7",
    "@babel/runtime": "^7.24.7",
    "@fullhuman/postcss-purgecss": "^6.0.0",
    "@img/sharp-win32-x64": "^0.33.4",
    "@markuplint/pug-parser": "^4.6.4",
    "@rollup/plugin-babel": "^6.0.4",
    "@types/node": "^20.14.2",
    "@types/pug": "^2.0.10",
    "autoprefixer": "^10.4.19",
    "commander": "^12.1.0",
    "cross-env": "^7.0.3",
    "css-declaration-sorter": "^7.2.0",
    "eslint": "^9.4.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "fs-extra": "^11.2.0",
    "glob": "^10.4.1",
    "globals": "^15.4.0",
    "js-beautify": "^1.15.1",
    "markuplint": "^4.9.1",
    "npm-check-updates": "^16.14.20",
    "postcss": "^8.4.38",
    "postcss-normalize-charset": "^7.0.0",
    "postcss-sort-media-queries": "^5.2.0",
    "prettier": "^3.3.2",
    "pug": "^3.0.3",
    "rimraf": "^5.0.7",
    "rollup": "^4.18.0",
    "sass": "^1.77.5",
    "sharp": "^0.33.4",
    "svgo": "^3.3.2",
    "vite": "^5.3.0",
    "vite-plugin-handlebars": "^2.0.0",
    "vite-plugin-html": "^3.2.2",
    "vite-plugin-live-reload": "^3.0.3"
  },
  "dependencies": {
    "jquery": "^3.7.1",
    "tailwindcss": "^3.4.4"
  },
  "browserslist": [
    "last 3 versions",
    "ie >= 11"
  ],
  "comments": {
    "": "",
    "npm-check-updates": "$ yarn ncu, $ yarn ncu -u, $ yarn ncu --upgrade --target minor, $ yarn ncu -u --target patch",
    "yarn": "yarn cache clean"
  }
}
